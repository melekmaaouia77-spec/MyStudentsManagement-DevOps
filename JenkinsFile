pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/melekmaaouia77-spec/MyStudentsManagement-DevOps.git',
                    branch: 'master'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Quality (SonarQube)') {
             steps {
                  withSonarQubeEnv('SonarQube') {   // le nom que tu as donn√© dans Tools
            sh 'mvn sonar:sonar'
                                                }
                   }
                                     }
    }

    post {
        always {
            archiveArtifacts artifacts: 'target/*.jar', allowEmptyArchive: true
        }
    }
}