pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/melekmaaouia77-spec/MyStudentsManagement-DevOps.git',
                    branch: 'master'   // ou 'master' selon ta branche principale
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test (bonus)') {
            steps {
                sh 'mvn test'   // si tu as ajout√© des tests unitaires
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'target/*.jar', allowEmptyArchive: true
        }
    }
}