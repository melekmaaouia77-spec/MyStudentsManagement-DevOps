pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/melekmaaouia77-spec/MyStudentsManagement-DevOps.git',
                    branch: 'master'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Quality (SonarQube)') {   // on ajoutera ça juste après
            steps {
                sh 'mvn sonar:sonar'   // à configurer avec SonarQube
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'target/*.jar', allowEmptyArchive: true
        }
    }
}