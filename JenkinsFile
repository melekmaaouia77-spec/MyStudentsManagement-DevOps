pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/melekmaaouia77-spec/MyStudentsManagement-DevOps.git',
                    branch: 'master'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests'   // ‚Üê ajoute -DskipTests
            }
        }

        // Tu peux garder le stage Test (bonus) ou le supprimer
        stage('Test (bonus)') {
            steps {
                sh 'mvn test'   // si tu veux vraiment tester, il faudra installer MySQL
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'target/*.jar', allowEmptyArchive: true
        }
    }
}